{
  "manifest_version": 3,
  "name": "Multi-Site Selection Search",
  "description": "Durchsucht mehrere definierte Webseiten gleichzeitig mit dem markierten Text oder einer manuellen Eingabe.",
  "version": "1.0.0",
  "permissions": [
    "contextMenus",
    "storage",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "Multi-Site Suche",
    "default_popup": "popup.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}